<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="fyp.counsellingandwellness.icounselling.fragments.student.StudentSessionPageFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/page_students"
        android:padding="12dp"
        android:background="@color/powder"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>

    <TextView
        android:id="@+id/noUsersText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="You have no student, perhaps it's time to up your game!"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_margin="35dp"
        android:paddingTop="200dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/red"/>

    <ListView
        android:id="@+id/usersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"/>
</LinearLayout>