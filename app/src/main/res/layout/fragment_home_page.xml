<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomePageFragment"
    android:background="@drawable/homepagewallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/eventsAndWorkshops"
            android:onClick="goToUrl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="77dp"
            android:src="@drawable/home_eventsandworkshops"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/connectionMagazine"
            android:onClick="goToUrl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/home_connectionmagazine"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/recommendedMentalHealthApps"
            android:onClick="goToUrl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/home_recommendedmentalhealthapps"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/peerCounsellingVolunteer"
            android:onClick="goToUrl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/home_peercounsellingvolunteer"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>
    </LinearLayout>
</ScrollView>