<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.counsellor.CounsellorMorePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/page_more"
            android:padding="12dp"
            android:background="@color/powder"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gainsboro"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:id="@+id/myProfile"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iconMyProfile"
                android:src="@drawable/icon_user"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:tint="@color/darkGrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconMyProfile"
                android:layout_centerVertical="true"
                android:text="My Profile"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrowright"
                android:layout_alignParentEnd="true"
                android:tint="@color/yellow"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gainsboro"
            android:layout_marginLeft="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gainsboro"
            android:layout_marginLeft="50dp"/>

        <RelativeLayout
            android:id="@+id/passcodeFingerprint"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iconPasscodeFingerprint"
                android:src="@drawable/icon_lock"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:tint="@color/darkGrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconPasscodeFingerprint"
                android:layout_centerVertical="true"
                android:text="Fingerprint App Lock"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Switch
                android:id="@+id/switchFingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gainsboro"
            android:layout_marginLeft="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gainsboro"
            android:layout_marginLeft="50dp"/>

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iconLogout"
                android:src="@drawable/icon_logout"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:tint="@color/darkGrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconLogout"
                android:layout_centerVertical="true"
                android:text="Logout"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gainsboro"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
</ScrollView>






